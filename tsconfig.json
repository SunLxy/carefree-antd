{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": [".dumi/tmp/*"],
      "@packages": ["packages/*"]
    }
  },
  "include": [
    "./typings.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.ts",
    ".dumirc.ts"
  ],
  "exclude": ["node_modules", "lib", "esm", "dist", "typings"]
}
