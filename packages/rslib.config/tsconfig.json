{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "esm",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
